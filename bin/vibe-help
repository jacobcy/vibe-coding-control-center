#!/usr/bin/env zsh
# vibe-help - Display help information for vibe commands

set -e

show_help() {
    echo "Vibe Coding Control Center - Help"
    echo ""
    echo "Usage: vibe [options] [command]"
    echo ""
    echo "Options:"
    echo "  -h, --help     Show this help message"
    echo ""
    echo "Commands:"
    echo "  chat           快速启动 AI 工具（支持交互和快速问答）"
    echo "  equip          Install/update AI tools"
    echo "  env            Environment and key management"
    echo "  init           Initialize new project"
    echo "  alias          Manage command aliases"
    echo "  config         Manage configuration files"
    echo "  check          System health check"
    echo "  flow           Feature development workflow"
    echo "  sign           Manage Git user identity for worktree"
    echo "  help           Show this help information"
    echo ""
    echo "Examples:"
    echo "  vibe                         # Interactive mode"
    echo "  vibe chat                    # Start AI chat"
    echo "  vibe flow start my-feature   # Start new feature"
    echo "  vibe check api               # Verify API connectivity"
    echo ""
    echo "Run 'vibe' without arguments for interactive mode."
}

if [[ $# -gt 0 ]]; then
    case "${1:-}" in
        -h|--help)
            show_help
            exit 0
            ;;
        *)
            echo "Unknown option for vibe-help: ${1:-}" >&2
            show_help
            exit 2
            ;;
    esac
else
    show_help
fi
